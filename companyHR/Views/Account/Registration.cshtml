@model company.BL.Model.RegistrationVM 
@{
    Layout = "_Acount";
    ViewBag.Title = "Sign Up Page";
}
<div class="card-body">
    <div class="pt-4 pb-2">
        <h5 class="card-title text-center pb-0 fs-4">Sign Up to Your Account</h5>
        <p class="text-center small">Enter  Email & password to Register</p>
    </div>

    <form class="row g-3 needs-validation" novalidate asp-controller="Account" asp-action="Registration" method="POST">
        <div class="col-12">
            <label for="yourUsername" class="form-label">Email</label>
            <div class="input-group has-validation">
                <input type="email" class="form-control" asp-for="Email" placeholder="" required autofocus>
                <div class="invalid-feedback">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>
        <div class="col-12">
            <label for="yourPassword" class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="yourPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
            <div class="invalid-feedback">
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="col-12">
            <div class="form-check">
                <input type="checkbox" asp-for="IsAgree" id="agree" class="form-check-input">
                <label class="form-check-label" for="agree">I read and agree </label>
            </div>
        </div>
        <div class="col-12">
            <button class="btn btn-primary w-100" type="submit">Sign Up</button>
        </div>
       
        <div class="col-12 text-center">
            <a asp-controller="Account" asp-action="Login">You already have a membership?</a>
        </div>

    </form>


</div>